<div class="header">
  <h1>
    <% if "#{@pin.category.name}" == "rails" %>
      <%= image_tag('rails-logo-thumbnail.png') %>
    <% elsif "#{@pin.category.name}" == "ruby" %>
      <%= image_tag('ruby-logo-thumbnail.png') %>
    <% end %>
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
  <p><%= "#{@pin.text}" %></p>
  <% if !@pin.image.nil? %>
    <img src="<%= @pin.image.url(:medium) %>">
  <% end %>
  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
</div>
<div class="pin-users">
  <h4>This has been pinned by:</h4>
  <% @users.each do |user| %>
    <p><%= "#{user.first_name} #{user.last_name}" %></p>
  <% end %>
</div>
<br />

<%= render partial: "shared/repin_form", local: {pin: @pin} %>

<%= link_to "Edit", "/pins/#{@pin.id}/edit", html_options = {class: "url btn btn-default"} %>

<%= link_to pins_path, html_options = {class: "url btn btn-default"} do %>
  <i class="fa fa-home"></i>
  Back to Home
<% end %>
